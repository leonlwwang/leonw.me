---
import leonlogo from '/assets/leonlogo.png';
import Layout from '../layouts/Layout.astro';
---

<Layout title="Leon Wang">
	<div id="flexbox">
		<div id="child">
			<img id="logo" src={leonlogo} alt="leon-logo"/>
		</div>
		<h1 id="name" style="font-family: 'Spock', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;">Leon Wang</h1>
	</div>
</Layout>

<style>
	#flexbox {
		padding: 2rem;
		display: block;
	}
	#name {
    	font-size: 8rem;
    	line-height: 1;
		text-align: center;
	}
	#logo {
		display: block;
		width: 400px;
		height: auto;
	}
	#child {
		display: flex;
		justify-content: center;
		margin-right: auto;
		margin-left: auto;
	}
    @media screen and (max-width: 768px) {
		#logo {
			margin-top: 4rem;
			width: 70% !important;
		}
		#name {
			font-size: 4rem !important;
		}
    }
</style>